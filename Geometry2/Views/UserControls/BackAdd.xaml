<UserControl x:Class="Geometry2.Views.UserControls.BackAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Geometry2.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Width="380" Height="450">
        <Grid 
        Background="{StaticResource DarkDarkBlack}"
        Height="380" Width="380" >

            <Rectangle
            Width="50"
            Height="50"
            Fill="{StaticResource DarkDarkBlack}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.5,0.5"
            Margin="54,-25,0,0"
            >
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="45"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>


            <Grid Margin="10" Background="{StaticResource DarkBlack}">

            </Grid>
        </Grid>
    </Grid>
</UserControl>
