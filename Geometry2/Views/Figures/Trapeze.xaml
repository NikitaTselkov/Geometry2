<UserControl x:Class="Geometry2.Views.Figures.Trapeze"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Geometry2.Views.Figures"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Main, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <ResourceDictionary>

            <BitmapImage x:Key="TrapezeF" UriSource="/Image/Trapeze.png" />

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Viewbox>
            <Button Style="{StaticResource ButtonBack}" Command="{Binding GoToDecisionPage}" CommandParameter="Trapeze">
                <Image Source="{StaticResource TrapezeF}" Width="300" Height="200" />
            </Button>
        </Viewbox>
    </Grid>
</UserControl>
