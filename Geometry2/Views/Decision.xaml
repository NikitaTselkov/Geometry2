<Page x:Class="Geometry2.Views.Decision"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Geometry2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Decision"
      DataContext="{Binding Decision, Source={StaticResource Locator}}">

    <Grid Background="{StaticResource DarkDarkBlack}">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="210*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="186*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="408*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Background="{StaticResource DarkBlack}">
            <Label Content="Given" Style="{StaticResource Logo}" />

            <Grid Margin="10 80 10 0">

                <ScrollViewer VerticalScrollBarVisibility="Hidden">

                    <StackPanel>

                       

                    </StackPanel>

                </ScrollViewer>

            </Grid>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="3" Background="{StaticResource DarkBlack}">

        </Grid>

        <Grid Grid.Row="1" Grid.Column="5" Background="{StaticResource DarkBlack}">

            <Label Content="Find" Style="{StaticResource Logo}" />
            
            <Grid Margin="10 80 10 0">

                <ScrollViewer VerticalScrollBarVisibility="Hidden">

                    <StackPanel>

                        <ItemsControl ItemsSource="{Binding Figure}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ShapeId}" />
                                        <TextBlock Text="{Binding Value}" />
                                        <TextBlock Text="{Binding Letter}" />
                                        <TextBlock Text="{Binding MathematicalProperty}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="Add +" Style="{StaticResource AddButton}" Command="{Binding AddShapeCommand}" />

                        <ItemsControl ItemsSource="{Binding AddWindow}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>

                </ScrollViewer>

            </Grid>

        </Grid>



    </Grid>
</Page>
